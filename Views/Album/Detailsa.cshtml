@using MusicaNobaMVC.Models;
@using MusicaNobaMVC.ViewModels;

@model IEnumerable<AlbumListViewModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "MusicaNoba - Detalle Album";
}

@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" asp-controller="Album">Agregar Un Nuevo Album</a>

}


<h2>Detalle del álbum</h2>

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Título</dt>

            <dt class="col-sm-3">Año</dt>
        </dl>
        <dl>
            @foreach (var album in Model)
            {
            <dd class="col-sm-9">@album.Titulo</dd>
            <dd class="col-sm-9">@album.Anio</dd>
            }
        </dl>

        <h4>Canciones</h4>
        <ul>
        @foreach (var cancion in Model)
        {
            <li>
                @cancion.CancionNombre
            </li>
        }
        </ul>
        <a asp-action="Index">Volver al listado</a>
    </div>
</div>