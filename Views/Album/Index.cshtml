@using MusicaNobaMVC.Models;
@using MusicaNobaMVC.ViewModels;

@model IEnumerable<AlbumListViewModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "MusicaNoba - Albumes";
}

@if (User.IsInRole("Admin"))
{
    <a class="fa-solid fa-plus" asp-action="Create" asp-controller="Album">Agregar Un Nuevo Album</a>
    <a class="fa-solid fa-pencil" asp-action="Edit" asp-controller="Album">Editar Album</a>  
}


<table class="table">
    <tr>
        @if (User.IsInRole("Admin"))
        {
            <th>Id del Album</th>
        }
        <th>Nombre del Album</th>
        <th>Año de Lanzamiento</th>
    </tr>
    @foreach (var album in Model)
    {
        <tr>
            @if (User.IsInRole("Admin"))
            {
                <td>@album.IdAlbum</td>
            }
            <td>@album.Titulo</td>
            <td>@album.Anio</td>
        </tr>
    }
</table>
