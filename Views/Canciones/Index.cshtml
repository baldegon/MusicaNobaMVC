@model IEnumerable<MusicaNobaMVC.Models.Cancion>

@{
    ViewData["Title"] = "MusicaNoba";
}

<h1>Musica Noba</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album.Anio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Album.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCancion">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCancion">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCancion">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
